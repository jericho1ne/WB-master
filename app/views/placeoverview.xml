<Alloy>
	<Window id="placeoverview" class="absolute">	
		<View id="content" class="window_container">
		
			<View id="miniHeaderContainer" width="100%" height="60" top="0" class="layout_vert" backgroundColor="#777477" zIndex="97" opacity="0" >	
				<Label id="mini_place_name_label" text="" class="feed_label_left_lg white text_large_light"/>
				<Label id="mini_place_second_label" text="" class="feed_label_left white text_medium_bold" />
				<Label id="mini_place_dist_label" text="" class="feed_label_left white text_medium_bold" />
			</View>
			
			<ScrollView id="scrollView" class="fill_height" top="-92" opacity="1">
				//------------------------------------------------------------------------------------------------------
				//  This scrollView contains the following top level elements, all dynamically filled in by controller
				//	  (0)		headerContainer / miniHeaderContainer
				//	  (1)		activityContainer
				//					|
				//					+-- checkinContainer
				//					|
				//					+-- estimateContainer
				//		(2)		marksContainer
				//		(3)		poiDetailContainer
				//------------------------------------------------------------------------------------------------------
				<View id="headerContainer" class="layout_vert">
					<View id="headerTop" class="layout_horz">
						<View class="width_50"/>
						<View class="fill_width">
							<View id="checkboxHeader" class="float_right" /> 
						</View>
					</View>
					<View id="headerBottom" class="layout_vert">
						<Label id="place_name_label" 		text="" class="white feed_label_left_lg text_large_light"/>
						<Label id="place_address_label" text="" class="white feed_label_left text_small_light" />
						<Label id="place_city_label" 		text="" class="white feed_label_left text_small_light" />
						<Label id="place_dist_label" 		text="" class="white feed_label_left text_small_light" />			
					</View>
				</View>

        // 						WHO'S HERE
				// +===== activityContainer ===========+
				// |  +------activityTitle-----------+ |
				// |  |         WHO'S HERE           | |
				// |	+------------------------------+ |
				// |  +------activityList------------+ |
				// |	| +----+ +----+ +----+ +----+  | |
				// |  | |    | |    | |    | |    |  | |
				// |  | +----+ +----+ +----+ +----+  | |
				// |  | ^  fit up to 8            ^  | |
				// |  |    thumbnails total          | |
				// |  +------------------------------+ |		
				// +===================================+				
				<View id="activityContainer" class="container">
  			  <Label id="activityTitle" text="WHO'S HERE" class="section_header bg_dk_gray text_medium_medium white" />
  			  <View id="activityList" contentHeight="auto" width="100%" class="thumbnail_sm_container layout_horz border bg_lt_blue"/> 
  		  </View>
 		   		  
  		 
  		  <View id="latest_estimate_container" class="feed_item_lg">
					<!--
					<View id="last_update_container" class="feed_item_lg">
						<ImageView id="last_update_thumb" class="thumbnail"/>
						
						<View id="last_update_middle" class="middle_view">
							<Label class="feed_label_left text_medium_light" id="latest_update_static">latest update</Label>
								// add most recent update labels here programmatically
						</View>
						<View class="right_view" id="last_update_right">
								// add most recent update labels here programmatically
						</View>	
					-->
				</View>
				
				
				
								
			</ScrollView>
		</View>
	</Window>
</Alloy>