<Alloy>
	<Window id="register" class="container">
		
		<View id="menubar">
			<View id="menuLeft">
				<Button id="backBtn" class="center_vertical"/>
			</View>
			<View id="menuCenter">
				<Label id="wbLogoMenubar" class="center_vertical"/>
			</View>
			<View id="menuRight">
				<Button id="infoBtn" class="center_vertical"/>
			</View>
		</View>
		
		<ScrollView class="">
			<!-- Create account fields:  username, 2x passwd, submit btn -->
			<Label class="form_label top_20">email</Label>
			<TextField id="email"></TextField>
		
			<Label class="form_label top_20">password</Label>
			<TextField id="password1"></TextField>
			<TextField id="password2"></TextField>
			
			<Label class="form_label top_20">password</Label>
			<View class="layout_horz">
				<Button id="uploadGalleryPhoto" onClick="uploadFromGallery" class="width_">Choose from Gallery</Button>
				<Button id="uploadCameraPhoto" onClick="uploadFromCamera">Take a Snapshot</Button>
			</View>
			<Button id="continueBtn" onClick="uploadPhoto">create account</Button>
			
	 	</ScrollView>
	</Window>
</Alloy>
