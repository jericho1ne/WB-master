<Alloy>
	<Window id="photoupload" class="container">
		<View id="menubar"/>
			
		<ScrollView class="fill_width bg_lt_blue">
			<Label class="form_label top_40">choose a profile photo</Label>
			<Label class="text_small_light">no humans allowed!</Label>
			
			<ImageView id="photoPlaceholder"/>
		
			<View class="layout_horz top_20 height_60dp width_80">
				<View class="layout_horz width_50">
					<Button id="galleryBtn" class="float_right">gallery</Button>
				</View>
				<View class="layout_horz width_50">
					<Button id="cameraBtn" onClick="uploadFromCamera" class="float_left">camera</Button>
				</View>
			</View>
			
			<Button id="continueBtn" class="btn_large top_20" onClick="createAccount">create account</Button>
			
	 	</ScrollView>
	</Window>
</Alloy>


























